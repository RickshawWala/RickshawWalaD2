<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aliv3.rickshawaladriver2">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCCGJT7iVIeGO5LSqTE1klTTBhcI6CSV9Q" />

        <activity
            android:name="com.aliv3.rickshawaladriver2.SplashActivity"
            android:theme="@style/SplashTheme">
        </activity>

        <activity android:name="com.aliv3.rickshawaladriver2.RideActivity"
            android:label="@string/title_activity_maps">
        </activity>

        <activity android:name="com.aliv3.rickshawaladriver2.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>

        <activity android:name="com.aliv3.rickshawaladriver2.RegisterActivity"
            android:label="@string/title_activity_register">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.aliv3.rickshawaladriver2.ProfileActivity"
            android:label="@string/title_activity_profile">
        </activity>

        <activity android:name="com.aliv3.rickshawaladriver2.ConfirmBookingActivity"
            android:label="@string/title_activity_confirm">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aliv3.rickshawaladriver2.RideActivity" />
        </activity>
    </application>

</manifest>